@model Service
<form method="post" enctype="multipart/form-data">
    <div>
        <label class="mt-3">Title</label><br/>
        <input asp-action="Title" class="form-control" /><br/>
        <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div>
    <label class="mt-3">Subtitle</label><br/>
    <input class="form-control" asp-for="Subtitle"/><br/>
    <span class="text-danger" asp-validation-for="Subtitle"></span>
</div>
<div>
    <label class="mt-3">Image</label><br/>
    <input class="form-control" asp-for="Photo" accept="image/*"/><br/>
    <span class="text-danger" asp-validation-for="Photo"></span>
</div>
<div>
    <button type="submit" class="btn btn-primary">Create service</button>
</div>
</form>