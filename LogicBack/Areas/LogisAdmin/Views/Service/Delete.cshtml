@model Service
<div>
    <div>
        <h4>Id:</h4>
        <p>@Model.Id</p>
    </div>
    <div>
        <h4>Title:</h4>
        <p>@Model.Title</p>
    </div>
    <div>
        <h4>Subtitle</h4>
        <p>@Model.Subtitle</p>
    </div>
    <div>
        <h4>Image:</h4>
        <img style="width:150px;" src="~/assets/img/@Model.Image"/>
    </div>
</div>
<form method="post" class="mt-4">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>